<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abhim_000.twitterBot.SearchParamActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search for tweets"
        android:id="@+id/textView"
        android:textSize="32dp"
        android:alpha="0.6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#hashtag"
        android:id="@+id/hashtag"
        android:textSize="20dp"
        android:alpha="0.5"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/search"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@name"
        android:id="@+id/at"
        android:textSize="20dp"
        android:alpha="0.5"
        android:layout_alignTop="@+id/hashtag"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/hashtag"
        android:layout_alignStart="@+id/hashtag"
        android:layout_alignRight="@+id/at"
        android:layout_alignEnd="@+id/at"
        android:gravity="center_horizontal" />

</RelativeLayout>
